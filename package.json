{
  "name": "elec",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . --overwrite --asar --platform=win32 --arch=x64 --icon=assets/icon.ico --prune=true --out=release-builds",
    "pack": "electron-builder --dir --win --x64",
    "dist": "electron-builder --win --x64"
  },
  "author": "guanhua",
  "license": "guanhua",
  "dependencies": {
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourdomain.elec",
    "asar": true,
    "compression": "maximum",
    "asarUnpack": "*",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
 }